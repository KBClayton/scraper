<!-- Modal -->
<div class="modal fade push20" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="exampleModalLongTitle">Sign In Failed</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="mb-0">The UserName and/or Password you entered are incorrect.</p>  
        <p class="mb-0">Please try again or sign up for a <b>FREE</b> account now.</p> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Try Again</button>
        <a href="/createProfile"><button type="button" class="btn btn-primary">New Account</button></a>
      </div>
    </div>
  </div>
</div>


