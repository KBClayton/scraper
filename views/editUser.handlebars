<div class="push8"></div>
<div class="container">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<div class="card p-3 bg-light border-secondary mb-3 opaque">
				<div class="bg-info text-light p-3 border border-dark">
					<h3>Edit Profile</h3>	
					<p class="mb-0 text-dark">Edit your user profile information.  Then click Save.</p>
				</div>
				<br>
				<div class="row">
          <div class="col-md-2"></div>
					<div class="col-md-8">
            <div class="form-group">
							<label class="mb-2 text-center" for="email"><u>Email</u></label>	
							<input type="text" class="form-control border-dark" name="username" id="emailNew" placeholder="{{account.email}}">
						</div>
            <div class="form-group">		
							<label class="mb-2 text-center" for="email"><u>First Name</u></label>				
							<input type="text" class="form-control border-dark" name="username" id="firstNameNew" placeholder="{{account.firstName}}">
						</div>
            <div class="form-group">
							<label class="mb-2 text-center" for="email"><u>Last Name</u></label>					
							<input type="text" class="form-control border-dark" name="username" id="lastNameNew" placeholder="{{account.lastName}}">
						</div>
            <div class="form-group">
							<label class="mb-2 text-center" for="email"><u>Location</u></label>							
							<input type="text" class="form-control border-dark" name="username" id="locationNew" placeholder="{{account.location}}">
						</div>
  
					</div>
          <div class="col-md-2"></div>
					<div class="col-12">
						<br>

						<div class="text-center">
							<a href="/change" class="text-dark"><button class="btn btn-secondary">Edit Password</button></a>
							<button class="btn btn-success" id="updateUser">Update Profile</button>
						</div>
						<div>
							<p class="mt-3 mb-0"><span class="text-danger">*</span><i> Denotes Required Fields</i></p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade push20" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="modalTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="mb-0" id="modalBody"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>