<div class="push8"></div>
<div class="container">
	<div class="row opaque">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<div class="card p-3 bg-light border-secondary mb-3">
				<div class="bg-info text-light p-3 border border-dark">
					<h3>Create a Job Lead!</h3>
					<p class="text-dark mb-0"><i>Enter the following information to save this lead to your profile.</i></p>
				</div>
				
				<br>
				<div class="row">
					<div class="col-md-8">
						<p class="mb-2"><u>Basic Job Info</u><span class="text-danger"> *</span></p>
						<div class="form-group mb-2">							
							<input type="text" class="form-control border-dark p-1" name="jobTitle" id="jobTitle" placeholder="Job Title...">
						</div>
						<div class="form-group mb-2">
							<input type="text" class="form-control border-dark p-1" name="company" id="company" placeholder="Company or Business...">
						</div>
						<div class="form-group mb-2">
							<input type="text" class="form-control border-dark p-1" name="location" id="location" placeholder="Job Location...">
						</div>
						<div class="form-group mb-2">
							<input type="number" class="form-control border-dark p-1" name="salary" id="postedSalary" placeholder="Posted Salary (if any)...">
						</div>
					</div>
					<div class="col-md-4">
						<p class="mb-2"><u>Contact Name</u></p>
						<div class="form-group mb-2">
							<input type="text" class="form-control border-dark p-1" name="contactName" id="contactName" placeholder="Contact Name...">
						</div>
						<div class="form-group mb-2">
							<input type="number" class="form-control border-dark p-1" name="contactPhone" id="contactPhone" placeholder="Contact Phone...">
						</div>
					</div>
					<div class="col-md-8">
						<br>
						<div class="form-group text-center mb-0">
							<label for="notes"><u>Confidence Level</u></label>
							<div>
								<select id = "confidenceLevel" class="border-dark">
									<option value="Null"> --</option>
									<option value="1">1. - Not Confident At All!</option>
									<option value="2">2. - Not Very</option>
									<option value="3">3. - Average</option>
									<option value="4">4. - Somewhat</option>
									<option value="5">5. - Extremely Confident! </option>
								</select>	
							</div>
						</div>
					</div>
					<div class="col-md-4">
						<br>
						<div class="text-center">
							<button class="btn btn-info btn-lg border-dark" id="submit-newJob">Create Lead</button>
						</div>
					</div>
					<div class="col-12 mt-3">
						<div>
							<p class="mt-3 mb-0 text-center"><span class="text-danger">*</span><i> Denotes Required Fields</i></p>
						</div>
					</div>		
				</div>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>
<!-- Modal -->
<div class="modal fade push20" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-danger" id="modalTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="mb-0" id="modalBody"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>